
@import vars;

html {
    font-size: standard-text;
}

html, body {
    height: 100%;
}
body{
    background: background-dark;
    color: body-light;
    margin: 0;
    font-size: standard-size;
    font-family: fonts;
    font-weight: bold;
}

.container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}


/** Define out the various states of the messaging now **/
p#instruction {
}

body div#info p {
    display: none;
}

body.capable p#instruction {
    display: block;
}

body.capable div#info {
    background-color: ajyellow;
    color: ajdark-grey;
}

body.capable div#info p.infomsg {
    display: block;
}


/** near and far definitions **/
body.near p#near {
    display: block;
    font-size: 6em;
    color: ajyellow;
}

body.near div#info {
    background-color: transparent;
    max-width: 100%;
}

body.far p#far {
    display: block;
    font-size: 1.2em;
    color: ajlight-grey;
}

body.far div#info {
    background-color: transparent;
}

/** Battery demo styles **/
body#batterydemo.capable p {
    display: block;
}

body#batterydemo.capable #gauge {
    height: 1px
    background-color: ajyellow;
}

body#batterydemo.capable div#meter {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 90%;
}

body#batterydemo.incapable div#meter, body#batterydemo.capable div#info {
    display: none;
}

div#meter p {
    margin: 0;
    padding: 0;
}

div#meter p#powerlevel {
    line-height: 0;
    padding-bottom: 1em;
    font-weight: normal;
}
span#power {
    font-size: 18rem;
}


/** various media query overrides **/

@media (min-width: 1000px) {

    html {
        font-size: 100%;
    }

    #info {
        max-width: 50%;
    }

    #meter {
        max-width: 50%;
    }
}

